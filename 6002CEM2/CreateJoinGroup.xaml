<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_6002CEM2.CreateJoinGroup"
             xmlns:viewmodel="clr-namespace:_6002CEM2.ViewModel"
             x:DataType="viewmodel:CreateJoinGroupViewModel">
    <VerticalStackLayout>
        <Label
            Text="You Have No Group Your options Are:"
            HorizontalOptions="Center"
            FontSize="18"
            Padding="-10,40"
            />
        <Button
            Text="Create Group"
             HorizontalOptions="Center"
            FontSize="18"
            Margin="40"
            Command="{Binding makegroupCommand}"/>
        <Button
            Text="Join Group"
             HorizontalOptions="Center"
            FontSize="18"
            Margin="90"
            Command="{Binding joingroupCommand}"/>
        <Button
            Text="go Back"
             HorizontalOptions="Center"
            FontSize="18"
            Margin="40"
            Command="{Binding BackCommand}"/>
    </VerticalStackLayout>
</ContentPage>