<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_6002CEM2.CreateJoinGroup"
             xmlns:viewmodel="clr-namespace:_6002CEM2.ViewModel"
             x:DataType="viewmodel:CreateJoinGroupViewModel">
    <Frame>
        <Grid BackgroundColor="{Binding Backgroundcolour}">
            <Label Text="You Have No Group Your options Are:" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="2"></Label>
            <Button Text="Create one" Grid.Column="1" Grid.Row="4" Command="{Binding makegroupCommand}"/>
            <Button Text="Join One" Grid.Column="1" Grid.Row="5" Command="{Binding joingroupCommand}"/>
            <Button Text="Back" class="Nav" Grid.Row="10"
                     Command="{Binding GoBackCommand}"></Button>
            <Button Text="Home" class="Nav" Grid.Row="10" Grid.Column="1"
                    Command="{Binding GoHomeCommand}"></Button>
            <Button Text="Settings" class="Nav" Grid.Row="10" Grid.Column="2"
                    Command="{Binding GoSettignsCommand}"></Button>

        </Grid>
    </Frame>
    
</ContentPage>