<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_6002CEM2.UserPage"
             xmlns:viewmodel="clr-namespace:_6002CEM2.ViewModel"
             x:DataType="viewmodel:UserPageViewModel"
             Title="UserPage">
    <VerticalStackLayout>
        <Label 
            Text="{Binding UserName}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Get The Data"
                SemanticProperties.Hint="Counts the number of times you click"
                Command="{Binding LoadCommand}"
               
                HorizontalOptions="Center" />
        <Button Text="{Binding ButtonName}"
                Command="{Binding LoadCommand}"
               IsVisible="False","{binding ButtonName}"
                HorizontalOptions="Center" />


    </VerticalStackLayout>
</ContentPage>